<?xml version="1.0" encoding="utf-8"?>
<Page
    x:Class="cidev_launcher.Views.Pages.ExplorePage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:cidev_launcher.Views.Pages"
    xmlns:models="using:cidev_launcher.Models"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <GridView x:Name="explorePage_GridView"
            IsItemClickEnabled="True"
            SelectionMode="None"
            Loaded="_explorePageGridView_Loaded"
            ItemClick="_explorePageGridView_ItemClick" >
        <GridView.ItemTemplate>
            <DataTemplate x:DataType="models:CachedGame">
                <StackPanel Width="200" Height="200" Margin="16">

                    <!-- The image to connect between pages. -->
                    <Image x:Name="explorePage_Thumbnail" Source="{x:Bind thumbnailImgPath}" MinWidth="100" Stretch="Uniform"/>

                    <TextBlock Text="{x:Bind gameInfo.gameTitle}" Style="{ThemeResource SubtitleTextBlockStyle}" HorizontalAlignment="Left" Margin="0,8,0,0" />

                </StackPanel>
            </DataTemplate>
        </GridView.ItemTemplate>
    </GridView>

</Page>
